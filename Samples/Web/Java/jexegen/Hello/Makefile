# ----------------------------------------------------------------------------
# Standard Microsoft SDK for Java MAKEFILE for Samples
# ----------------------------------------------------------------------------

ROOT = ..\..

# ----------------------------------------------------------------------------
# Tools
# ----------------------------------------------------------------------------

JVCATTR = jvc.exe -nologo

# ----------------------------------------------------------------------------
# Set destination directory.
# ----------------------------------------------------------------------------

DEST_DIR= .

# ----------------------------------------------------------------------------
#
# ----------------------------------------------------------------------------

all: 
    $(JVCATTR) -d $(DEST_DIR) Test\Hello.java
    jexegen /out:hello.exe /main:Test.Hello Test\*.class

